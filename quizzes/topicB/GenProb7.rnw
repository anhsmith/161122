
<<echo=FALSE, results=hide>>=
## DATA GENERATION
## QUESTION/ANSWER GENERATION
questions <- character(5)
    questions[1] <- "$P(A \\\\cup B)\\\\le P(A)+P(B)$."
    questions[2] <- "$P(A \\\\cap B)=P(A) \\\\times P(B)$."
    questions[3] <- "$P(A \\\\cup B)=P(A)+P(B)$."
    questions[4] <- "$P(A \\\\cap B)> P(A)$."
    questions[5] <- "$P(A \\\\cup B)< P(B)$."

solutions <- c(TRUE,FALSE,FALSE,FALSE,FALSE)
explanations <- character(5)
explanations[1] <- "Yes, as $P(A \\\\cap B) \\\\ge 0.$"
explanations[2] <- "Only if $A$ and $B$ are independent."
explanations[3] <- "Only if $P(A \\\\cap B) = 0$, i.e. the events are disjoint."
explanations[4] <- "$P(A \\\\cap B) \\\\le P(A)$, as requiring $B$ to occur as well as $A$ is more stringent."
explanations[5] <- "$P(A \\\\cup B) \\\\ge P(B)$, as giving the option for $B$ to occur instead of $A$ is less stringent."

## permute order of solutions/questions
Order <- sample(1:5)
questions <- questions[Order]
solutions <- solutions[Order]
explanations <- explanations[Order]  
@


\begin{question}
Which of the following probability expressions is {\it always} true?

%%%make no adjustments past this point!!!
\begin{answerlist}
  \item \Sexpr{questions[1]}
  \item \Sexpr{questions[2]}
  \item \Sexpr{questions[3]}
  \item \Sexpr{questions[4]}
  \item \Sexpr{questions[5]}
\end{answerlist}
\end{question}

%% SOLUTIONS
\begin{solution}

Recall that $P(A \cup B) = P(A) + P(B) - P(A \cap B)$.

\begin{answerlist}
  \item \Sexpr{mchoice2text(solutions[1])}: \Sexpr{explanations[1]}
  \item \Sexpr{mchoice2text(solutions[2])}: \Sexpr{explanations[2]}
  \item \Sexpr{mchoice2text(solutions[3])}: \Sexpr{explanations[3]}
  \item \Sexpr{mchoice2text(solutions[4])}: \Sexpr{explanations[4]}
  \item \Sexpr{mchoice2text(solutions[5])}: \Sexpr{explanations[5]}
\end{answerlist}
\end{solution}

